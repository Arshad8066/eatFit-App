<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.RegisterActivity">


    <ImageView
        android:id="@+id/imgpage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="TODO"
        android:src="@drawable/registration" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/signip_text"
        android:text="Sign Up"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/email_reg"
        android:layout_width="334dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:hint=" Enter Email"
        android:paddingLeft="60dp"
        android:shadowColor="#120F0F"
        android:textColor="#434242"


        android:textSize="16sp" />

    <EditText
        android:id="@+id/passreg"
        android:layout_width="334dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:hint="Enter password"
        android:paddingLeft="60dp"
        android:textColor="#434242"
        android:textSize="16sp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/registration_btn"
        android:layout_width="334dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="38dp"
        android:background="#68AA39"
        android:backgroundTint="#8CAE82"
        android:text="SIGN UP"
        android:textColorHighlight="#CAFADA"
        android:textColorLink="#CAFADA"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="334dp"
        android:layout_height="71dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/already_registered_sign_in"
        android:textColor="#616060"
        android:textSize="24sp" />

</LinearLayout>