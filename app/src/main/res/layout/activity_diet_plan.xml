<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<!--    <androidx.cardview.widget.CardView-->
<!--        app:cardElevation="10dp"-->
<!--        app:cardCornerRadius="10dp"-->
<!--        android:background="#FFFFFF"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_margin="10dp">-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/lowcarb"
                android:id="@+id/imageview"
                android:layout_width="120dp"
                android:layout_height="150dp"/>


            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtname"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Weight Loss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>



<!--    </androidx.cardview.widget.CardView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/ketodiet"
            android:id="@+id/imageview1"
            android:layout_width="120dp"
            android:layout_height="150dp"/>


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ketotxt"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="Keto Plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/weight_gain"
            android:id="@+id/weight_gain_img"
            android:layout_width="120dp"
            android:layout_height="150dp"/>


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weight_gain_txt"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="Weight Gain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/plant_based"
            android:id="@+id/plant_based_img"
            android:layout_width="120dp"
            android:layout_height="150dp"/>


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/plant_based_txt"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="Plant Based Diet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/mediterranean_diet"
            android:id="@+id/mediterranean_img"
            android:layout_width="120dp"
            android:layout_height="150dp"/>


        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mediterranean_txt"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="Mediterranean Diet "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
</ScrollView>